  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Installing-Dependencies",
          "level" : 2,
          "text" : "Installing Dependencies",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Before you can add SwiftCrossUI to your project and start working, you’ll need to setup some dependencies.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "macOS",
          "level" : 3,
          "text" : "macOS",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "First, install ",
              "type" : "text"
            },
            {
              "code" : "brew",
              "type" : "codeVoice"
            },
            {
              "text" : " if it isn’t already installed. Instructions on how to do that can be found at ",
              "type" : "text"
            },
            {
              "identifier" : "https:\/\/brew.sh",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : ".",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "Next, run the following command to install Gtk 4:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "brew install gtk4"
          ],
          "syntax" : null,
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "And you’re done!",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "inlineContent" : [
                {
                  "text" : "Xcode users:",
                  "type" : "text"
                }
              ],
              "type" : "strong"
            },
            {
              "text" : " If Xcode has trouble finding GTK 4 after you’ve installed it, try restarting your computer.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "inlineContent" : [
                {
                  "text" : "Note:",
                  "type" : "text"
                }
              ],
              "type" : "strong"
            },
            {
              "text" : " Package managers other than ",
              "type" : "text"
            },
            {
              "code" : "brew",
              "type" : "codeVoice"
            },
            {
              "text" : " should also work, as long as they provide a ",
              "type" : "text"
            },
            {
              "code" : "gtk4",
              "type" : "codeVoice"
            },
            {
              "text" : " package.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Linux",
          "level" : 3,
          "text" : "Linux",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "If you’re on a Debian or Ubuntu-based Linux distro, you can use the following command to install GTK 4 and Clang:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "sudo apt install libgtk-4-dev clang"
          ],
          "syntax" : null,
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "For Fedora:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "sudo dnf install gtk4-devel clang"
          ],
          "syntax" : null,
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "If your distro uses a different package manager, the package names will likely be similar.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Adding-SwiftCrossUI-to-Your-Project",
          "level" : 2,
          "text" : "Adding SwiftCrossUI to Your Project",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "To add SwiftCrossUI to your project, add the following dependency to your ",
              "type" : "text"
            },
            {
              "code" : "Package.swift",
              "type" : "codeVoice"
            },
            {
              "text" : " file.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            ".package(url: \"https:\/\/github.com\/stackotter\/swift-cross-ui\", branch: \"main\")"
          ],
          "syntax" : "swift",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "Here’s an example package file that uses SwiftCrossUI.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "import PackageDescription",
            "",
            "let package = Package(",
            "  name: \"Example\",",
            "  dependencies: [",
            "    .package(url: \"https:\/\/github.com\/stackotter\/swift-cross-ui\", branch: \"main\")",
            "  ],",
            "  targets: [",
            "    .executableTarget(",
            "      name: \"Example\",",
            "      dependencies: [",
            "        .product(name: \"SwiftCrossUI\", package: \"swift-cross-ui\")",
            "      ]",
            "    )",
            "  ]",
            ")"
          ],
          "syntax" : "swift",
          "type" : "codeListing"
        }
      ],
      "kind" : "content"
    }
